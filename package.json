{
  "name": "cowork-api",
  "version": "1.0.0",
  "description": "Coworking Space Reservation API â€” Fastify + TypeScript + Prisma + IoT",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --project tsconfig.build.json",
    "start": "node dist/server.js",
    "lint": "eslint 'src/**/*.ts' '__tests__/**/*.ts'",
    "lint:ts": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern='__tests__/unit'",
    "test:integration": "jest --testPathPattern='__tests__/integration'",
    "test:coverage": "jest --coverage",
    "prisma:generate": "prisma generate --schema prisma/schema",
    "prisma:migrate": "docker exec cowork_api npx prisma migrate dev --schema prisma/schema",
    "prisma:migrate:deploy": "docker exec cowork_api npx prisma migrate deploy --schema prisma/schema",
    "prisma:studio": "prisma studio --schema prisma/schema",
    "prisma:seed": "docker exec cowork_api npx tsx prisma/seed.ts",
    "db:reset": "docker exec cowork_api npx prisma migrate reset --schema prisma/schema --force && docker exec cowork_api npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@prisma/client": "^6.4.0",
    "fastify": "^5.2.1",
    "fastify-type-provider-zod": "^4.0.2",
    "mqtt": "^5.14.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.19.0",
    "jest": "^29.7.0",
    "prisma": "^6.4.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
