model Espacio {
  id          String   @id @default(uuid())
  lugarId     String   @map("lugar_id")
  nombre      String
  referencia  String?
  capacidad   Int
  descripcion String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  lugar               Lugar                  @relation(fields: [lugarId], references: [id])
  reservas            Reserva[]
  alerts              Alert[]
  officeHours         OfficeHours?
  deviceDesired       DeviceDesired?
  deviceReported      DeviceReported?
  telemetryAggregations TelemetryAggregation[]

  @@index([lugarId])
  @@map("espacios")
}
