model Reserva {
  id             String   @id @default(uuid())
  espacioId      String   @map("espacio_id")
  lugarId        String   @map("lugar_id")
  emailCliente   String   @map("email_cliente")
  fechaDeReserva DateTime @map("fecha_de_reserva")
  horaInicio     DateTime @map("hora_inicio")
  horaFin        DateTime @map("hora_fin")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  espacio Espacio @relation(fields: [espacioId], references: [id])
  lugar   Lugar   @relation(fields: [lugarId], references: [id])

  @@index([espacioId, horaInicio, horaFin])
  @@index([emailCliente])
  @@index([lugarId])
  @@map("reservas")
}
